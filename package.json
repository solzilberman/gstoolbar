{
  "name": "gstoolbar",
  "version": "0.0.0",
  "description": "Additional functionality for google scholar.",
  "main": "dist/scripts/popup.js",
  "license": "MIT",
  "keywords": [
    "firefox",
    "extension"
  ],
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-preset-es2015": "6.9.0",
    "node-sass": "9.0.0",
    "onchange": "7.1.0"
  },
  "scripts": {
    "build": "mkdir -p dist && npm run build:scripts && npm run build:styles",
    "build:scripts": "babel src/scripts --out-dir dist/scripts",
    "build:styles": "node-sass src/styles/popup.scss dist/styles/popup.css -q",
    "build:extension": "mkdir -p dist/images && cp -R src/images/* dist/images && cp -R src/manifest.json dist/manifest.json",
    "watch": "onchange 'src/styles/*.scss' -- npm run build styles",
    "firefox": "cd dist && zip -r ../boilerplate-firefox-extension.xpi * && cd .."
  },

  "babel": {
    "presets": [
      "es2015"
    ]
  }
}
